<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnLumiere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="lightActivity"
                android:text="Lumiere" />

            <Button
                android:id="@+id/btnGyro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gyroscopeActivity"
                android:text="Boussole" />

            <Button
                android:id="@+id/btnPress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="pressureActivity"
                android:text="Pression" />

            <Button
                android:id="@+id/btnNiveau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="niveauActivity"
                android:text="Niveau" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>